doctype html
html
	head
		title = @t[:title]
		meta name="keywords" content="#{@t[:keywords]}"
		meta name="description" content="#{@t[:description]}"
		meta http-equiv="content-type" content="text/html; charset=UFT-8"
		script src="#{_assets('view/js/jquery.js')}" type="text/javascript"
		link rel="shortcut icon" href="#{_assets(_var(:favicon, :view))}" type="image/x-icon"
		link rel='stylesheet' type='text/css' href='#{_assets("view/css/style.css")}'
		link rel='stylesheet' type='text/css' href='#{_assets("admin/admin.css")}'
	body
		#wrap
			#header.keeptop
				ul#top_menu
					- data_menu(:admin).each do | item |
						- menu_focus = item.include?(:focus) ? "focus1" : ""
						li.left
							span class="#{menu_focus}"
								a href="#{item[:link]}" title="#{item[:name]}" = Sl[item[:name].to_sym]
							- if item.include?(:sub_menu)
								- menu_hide = menu_focus == "focus1" ? '' : 'hide'
								ul.sub_menu class="#{menu_hide}"
									- item[:sub_menu].each do | item |
										- menu_focus = item.include?(:focus) ? "focus2" : ""
										li.left
											span class="#{menu_focus}"
												a href="#{item[:link]}" title="#{item[:name]}" = Sl[item[:name].to_sym]
					li.right
						a href="/" = Sl[:frontground]
						a href="#{_url(_var(:logout, :link))}" = Sl[:logout]

			#bodyer
				#description = @t[:description]
				.clear

				== _tpl(:view_message)
				.clear

				#content == yield
				.clear

			#footer

		== _js('view/js/topmenu.js')
		== _js('admin/admin.js')
